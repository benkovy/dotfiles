[credential]
	helper = 
	helper = store --file /opt/dev/var/private/git_credential_store
[core]
	commitGraph = true
	editor=nvim
[diff]
	algorithm = patience
[gc]
	writeCommitGraph = true
[protocol]
	version = 2
[url "https://github.com/Shopify/"]
	insteadOf = git@github.com:Shopify/
	insteadOf = git@github.com:shopify/
	insteadOf = ssh://git@github.com/Shopify/
	insteadOf = ssh://git@github.com/shopify/
[user]
	name = Ben Kovacs
	email = ben.kovacs@shopify.com
[alias]
	push-this = push -u origin HEAD
	push-this-fwl = push -u origin --force-with-lease
	cm = checkout main
	c- = checkout -
	dms = diff main --stat
	rbm = rebase main
	rbim = rebase -i main
	com-no-e = commit --amend --no-edit
	co = checkout
	br = branch
	st = status
	rb = rebase
